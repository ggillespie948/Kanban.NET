@model IssueTracker.Models.ProjectModels

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<h3>A project by @Html.DisplayFor(model => model.OwnerUser.Email) </h3>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<div>
    <h4> @Html.DisplayNameFor(model => model.Description) </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OwnerUser.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OwnerUser.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
